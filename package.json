{
  "name": "contact-ukti",
  "version": "0.1.0",
  "main": "app.js",
  "description": "A UK Trade & Investment contact form",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKTradeInvestment/contact-ukti/"
  },
  "engines": {
    "node": "0.12.9",
    "npm": "2.14.9"
  },
  "license": "GPL-2.0",
  "scripts": {
    "start": "node .",
    "dev": "parallelshell 'NODE_ENV=development nodemon . -e .js,.json,.html' 'npm run watch:scss' 'npm run watch:js' 'npm run watch:i18n'",
    "postinstall": "npm run create:public && npm run sass && (npm run hof-transpile & npm run browserify & npm run copy:images)",
    "watch:scss": "nodemon --ext scss --exec 'npm run sass'",
    "watch:js": "nodemon --watch assets/js --exec 'npm run browserify'",
    "watch:i18n": "nodemon --ext .json --watch apps/common/translations/src --watch apps/contact-ukti/translations/src --exec 'npm run hof-transpile'",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "copy:images": "cp -r ./assets/images ./public/",
    "sass": "node-sass ./assets/scss/app.scss ./public/css/app.css --include-path ./node_modules",
    "browserify": "browserify ./assets/js/index.js > ./public/js/bundle.js",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src -w --shared ./apps/common/translations/src",
    "maildev": "maildev",
    "lint": "eslint .",
    "style": "jscs **/*.js --config=./.jscsrc.json",
    "test": "npm run lint & npm run style & npm run test:unit",
    "test:unit": "NODE_ENV=test istanbul test _mocha -- --opts ./test/unit/mocha.opts -R spec",
    "test:acceptance": "wdio test/acceptance/wdio.conf.js",
    "test:acceptance-wip": "wdio test/acceptance/wdio.wip.conf.js",
    "test:acceptance-headless": "wdio test/acceptance/wdio.headless.conf.js",
    "coverage": "npm_config_coverage=true npm run test:unit",
    "quality": "plato --recurse --exclude 'node_modules|reports|test|public' --dir reports/plato ."
  },
  "author": "UK Trade & Investment",
  "dependencies": {
    "async": "^1.5.2",
    "basic-auth": "^1.0.3",
    "body-parser": "^1.13.0",
    "browserify": "^12.0.1",
    "churchill": "0.0.5",
    "connect-memjs": "0.0.8",
    "cookie-parser": "^1.3.5",
    "email-templates": "^2.0.1",
    "express": "^4.12.4",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.11.3",
    "hof": "1.2.0",
    "hogan-express-strict": "^0.5.4",
    "hogan.js": "^3.0.2",
    "jade": "^1.11.0",
    "jquery": "^2.1.4",
    "moment": "^2.10.3",
    "moment-business": "^2.0.0",
    "node-sass": "^3.2.0",
    "nodemailer": "^1.4.0",
    "nodemailer-smtp-transport": "^1.0.3",
    "nodemailer-stub-transport": "^1.0.0",
    "q": "^1.4.1",
    "raven": "^0.10.0",
    "request": "^2.67.0",
    "typeahead.js-browserify": "^1.0.5",
    "underscore": "^1.8.3",
    "universal-analytics": "^0.3.10",
    "winston": "^2.1.1",
    "yamljs": "^0.2.4"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "chai-as-promised": "^5.2.0",
    "cucumber": "^0.5.3",
    "debug": "^2.2.0",
    "del": "^2.0.2",
    "eslint": "^0.23.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-mocha": "^0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "globule": "^0.2.0",
    "hof-transpiler": "0.0.6",
    "istanbul": "^0.4.2",
    "jscs": "^1.13.1",
    "maildev": "^0.12.1",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "nock": "^5.2.1",
    "nodemon": "^1.8.1",
    "parallelshell": "^1.1.1",
    "plato": "^1.5.0",
    "pre-commit": "^1.0.10",
    "progress": "^1.1.8",
    "proxyquire": "^1.5.0",
    "selenium-standalone": "4.6.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0",
    "webdriverio": "^3.4.0"
  },
  "pre-commit": [
    "test"
  ]
}
