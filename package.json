{
  "name": "contact-ukti",
  "version": "1.3.0",
  "main": "app.js",
  "description": "A Department for International Trade contact form",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKTradeInvestment/contact-ukti/"
  },
  "engines": {
    "node": "4.8.4",
    "npm": "2.15.11"
  },
  "license": "GPL-2.0",
  "scripts": {
    "start": "node .",
    "dev": "NODE_ENV=development parallelshell 'nodemon . -e .js,.json,.html' 'npm run watch:scss' 'npm run watch:js' 'npm run watch:i18n'",
    "postinstall": "npm run create:public && npm run sass:prod && (npm run hof-transpile & npm run browserify:prod & npm run copy:images)",
    "watch:scss": "nodemon --ext scss --exec 'npm run sass:dev'",
    "watch:js": "nodemon --watch assets/js --exec 'npm run browserify:dev'",
    "watch:i18n": "nodemon --ext .json --watch apps/common/translations/src --watch apps/contact-ukti/translations/src --watch apps/office-finder/translations/src --exec 'npm run hof-transpile'",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "copy:images": "cp -r ./assets/images ./public/",
    "sass:dev": "node-sass ./assets/scss/app.scss ./public/css/app.css --source-map true --include-path ./node_modules",
    "sass:prod": "node-sass ./assets/scss/app.scss ./public/css/app.css --output-style compressed --include-path ./node_modules",
    "browserify:dev": "browserify ./assets/js/index.js -d -p [minifyify --map bundle.js.map --output ./public/js/bundle.js.map] > ./public/js/bundle.js",
    "browserify:prod": "browserify ./assets/js/index.js -d -p [minifyify --no-map] > ./public/js/bundle.js",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src -w --shared ./apps/common/translations/src",
    "maildev": "maildev",
    "lint": "eslint .",
    "style": "jscs **/*.js --config=./.jscsrc.json",
    "test": "npm run lint & npm run style & npm run test:unit",
    "test:unit": "NODE_ENV=test LOG_LEVEL=silent istanbul test _mocha -- --opts ./test/unit/mocha.opts -R spec",
    "test:acceptance": "wdio test/acceptance/wdio.conf.js",
    "test:acceptance-chrome": "wdio test/acceptance/wdio.chrome.conf.js",
    "test:acceptance-wip": "wdio test/acceptance/wdio.wip.conf.js",
    "test:acceptance-headless": "wdio test/acceptance/wdio.headless.conf.js",
    "coverage": "npm_config_coverage=true npm run test:unit",
    "quality": "plato --recurse --exclude 'node_modules|reports|test|public' --dir reports/plato .",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "author": "Department for International Trade",
  "dependencies": {
    "async": "^1.5.2",
    "basic-auth": "1.1.0",
    "body-parser": "1.15.2",
    "browserify": "^13.0.0",
    "churchill": "0.0.5",
    "connect-redis-crypto": "^3.0.0",
    "cookie-parser": "^1.4.1",
    "debug": "^2.3.3",
    "email-templates": "^2.1.0",
    "express": "^4.14.0",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.13.0",
    "hof": "5.0.1",
    "hof-transpiler": "0.0.6",
    "hogan-express-strict": "^0.5.4",
    "hogan.js": "^3.0.2",
    "jade": "^1.11.0",
    "jquery": "^2.0.0",
    "minifyify": "^7.3.2",
    "moment": "^2.11.2",
    "moment-business": "^2.0.0",
    "node-sass": "3.4.2",
    "nodemailer": "^2.1.0",
    "nodemailer-smtp-transport": "^2.1.0",
    "nodemailer-stub-transport": "^1.0.0",
    "q": "^1.4.1",
    "randomstring": "^1.1.4",
    "raven": "^0.10.0",
    "redis": "^2.0.0",
    "request": "github:request/request#master",
    "typeahead.js-browserify": "^1.0.7",
    "underscore": "^1.8.3",
    "universal-analytics": "^0.3.10",
    "winston": "^2.1.1",
    "yamljs": "^0.2.4",
    "snyk": "^1.83.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "cucumber": "^0.5.3",
    "del": "^2.2.0",
    "eslint": "1.10.3",
    "eslint-plugin-filenames": "^0.2.0",
    "eslint-plugin-mocha": "^1.1.0",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "globule": "^0.2.0",
    "istanbul": "^0.4.2",
    "jscs": "^2.9.0",
    "maildev": "^0.12.1",
    "mocha": "^2.4.5",
    "mocha-junit-reporter": "^1.9.1",
    "mocha-multi": "^0.7.2",
    "nock": "^7.0.2",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "plato": "^1.5.0",
    "pre-commit": "^1.1.2",
    "progress": "^1.1.8",
    "proxyquire": "^1.7.4",
    "require-uncached": "1.0.3",
    "rewire": "2.5.2",
    "selenium-standalone": "5.8.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "webdriverio": "3.4.0"
  },
  "pre-commit": [
    "test"
  ],
  "snyk": true
}
